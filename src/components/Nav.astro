---
import Icon from 'astro-icon';
---

<style>
.nav {
	display: flex;
	align-items: center;
  padding: 1rem 2rem;
  background-color: var(--t-bg);
}

.logo {
	display: block;
	color: var(--c-blue);
	margin-right: 0.5rem;
	font-weight: 900;
  font-size: var(--f-u3);
  font-family: 'Rammetto One', cursive;
}

.logo-dot {
  color: var(--c-purple);
}

.social {
	display: block;
	margin-left: auto;

}

.social + .social {
  margin-left: 0.75rem;
}

.socialicon {
	display: block;
	width: 1.25rem;
	height: 1.25rem;
	color: var(--c-purple);
	transition: fill linear 150ms;

}
.socialicon:hover {
  color: var(--c-pink);
}
</style>

<nav class="nav">
  <a class="logo" href="/">comunida<span class="logo-dot">.</span>dev</a>

  <a class="social" href="#">
    <Icon name="mdi:youtube" class="socialicon" />
  </a>
  <a class="social" href="https://twitter.com/_comunidadev">
    <Icon name="mdi:twitter" class="socialicon" />
  </a>
  <a class="social" href="#">
    <Icon name="mdi:linkedin" class="socialicon" />
  </a>
  <a class="social" href="https://github.com/comunidadev">
    <Icon name="mdi:github" class="socialicon" />
  </a>
</nav>
