---

import Icon from 'astro-icon';
import Logo from './Logo.astro';

---

<style>
.nav {
	display: flex;
	align-items: center;
  padding: 1rem 2rem;
  background-color: var(--t-bg);
}

.logo {
  width: 300px;
  vertical-align: middle;
  color: white;
}

.social {
	display: block;
	margin-left: auto;

}

.social + .social {
  margin-left: 1.25rem;
}

.internal-links {
  margin-left: 20px;
}

.internal-link {
  color: var(--c-white);
  margin-left: 20px;
}

.internal-link:hover {
  color: var(--c-purple);
}

@media (max-width: 850px) {
  .internal-links {
    display: none;
  }
}

@media (max-width: 600px) {
  .nav {
    padding: 1rem;
  }

  .logo {
    width: 200px;
  }

  .social + .social {
    margin-left: 0.5rem;
  }
}

@media (max-width: 350px) {
  .nav {
    padding: 1rem 0.5rem;
  }

  .logo {
    width: 180px;
  }

  .social + .social {
    margin-left: 0.25rem;
  }
}

</style>

<nav class="nav">
  <a href="/">
    <svg role="img" class="logo" viewbox="0 0 780 124" width=300 height=48>
      <title>Logo da Comunida.dev</title>
      <use xlink:href="#logo">
    </svg>
  </a>

  <!--
  <div class="internal-links">
    <a class="internal-link" href="/#carreira">
      Carreira @ Comunida.dev
    </a>

    <a class="internal-link" href="/mentoria">
      Mentoria
    </a>
  </div>
  -->

  <a class="social" href="https://www.youtube.com/channel/UC706xZkWHE38HnuhcqCsb5g" aria-label="Canal da Comunida.dev no YouTube" target="_blank" rel="noopener">
    <Icon name="mdi:youtube" class="icon" />
  </a>

  <a class="social" href="https://twitter.com/_comunidadev" aria-label="Comunida.dev no Twitter" target="_blank" rel="noopener">
    <Icon name="mdi:twitter" class="icon" alt="Twitter" />
  </a>

  <a class="social" href="https://github.com/comunidadev" aria-label="GitHub da Comunida.dev" target="_blank" rel="noopener">
    <Icon name="mdi:github" class="icon" alt="GitHub" />
  </a>
</nav>
