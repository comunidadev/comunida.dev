---

import Icon from 'astro-icon';

import Logo from './Logo.astro';

---

<style>
.nav {
	display: flex;
	align-items: center;
  padding: 1rem 2rem;
  background-color: var(--t-bg);
}

.logo {
  font-size: var(--f-u3);
}

.social {
	display: block;
	margin-left: auto;

}

.social + .social {
  margin-left: 1.25rem;
}

</style>

<nav class="nav">
  <div class="logo"><Logo /></div>

  <a class="social" href="#">
    <Icon name="mdi:youtube" class="icon" />
  </a>

  <a class="social" href="https://twitter.com/_comunidadev">
    <Icon name="mdi:twitter" class="icon" />
  </a>

  <a class="social" href="#">
    <Icon name="mdi:linkedin" class="icon" />
  </a>

  <a class="social" href="https://github.com/comunidadev">
    <Icon name="mdi:github" class="icon" />
  </a>
</nav>
